{
  "manifest_version": 3,
  "name": "LinkedIn Jobs — Applied Highlighter",
  "version": "1.0.1",
  "description": "Highlights LinkedIn job posts you’ve applied to.",
  "permissions": ["storage"],
  "host_permissions": ["*://www.linkedin.com/jobs/*"],
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/jobs/*"],
      "js": ["content-v2.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Applied Highlighter - Click to Test"
  },
  "web_accessible_resources": [
    {
      "resources": ["test-storage.html", "src/shared/*.js", "src/utils/*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "li-applied-highlighter@jasur",
      "strict_min_version": "109.0"
    }
  }
}
